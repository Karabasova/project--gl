#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
int numOfvowel(char string[]){
	int i=0;
	int count=0;
	while(string[i] != '\0'){
		string[i]=tolower(string[i]);
		if(string[i]=='a'||string[i]=='e'||string[i]=='u'||string[i]=='i'||string[i]=='y'||string[i]=='o'){
			count++;
		}
		i++;
	}
	return count;

}

int main(){
	char word[20];
	printf("\n Type word(only to 20 chars): ");
	scanf("%s",&word);
	printf("\n Your word is: %s",word);
	printf("\n In this word ' %s ' is %d vowels",word,numOfvowel(word));
}
